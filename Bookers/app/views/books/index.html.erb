<h1>Books</h1>
<table>
	<caption>読んだ本及び感想</caption>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book) %>
				<%= link_to "Edit", book_path(book) %>
				<%= link_to "Destroy", destroy_book_path(book),method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
	<%= form_for(@book) do |f| %>
<h3>Title</h3>
	<%= f.text_field :title %>
<h3>Body</h3>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>
