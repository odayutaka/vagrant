<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_field :body %>
<br><%= f.submit 'Update Book' %></br>
<% end %>

<p>
	<%= link_to "Show", book_path(@book) %> |
	<%= link_to "Back", books_path %>
</p>
