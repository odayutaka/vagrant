<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

<h3>Title</h3>
	<%= f.text_field :title %>
<h3>Body</h3>
	<%= f.text_area :body %>
<br><%= f.submit 'Create Book' %></br>
<% end %>