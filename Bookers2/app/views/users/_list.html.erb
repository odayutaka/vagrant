<h1>User info</h1>
 <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>


<table class="table">
	<tbody>
		<tr></tr>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</tbody>
</table>
	<div class="row">
	<% if user.id == current_user.id %>
        <%= link_to edit_user_path(user) do %>
        <span class="glyphicon glyphicon-wrench btn btn-default col-xs-12"></span>
        <% end %>
    <% end %>
	</div>
<div class="row">
<h2>New book</h2>
</div>
<div class="row">
<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
		<p><%= book.errors.count %> error prohibited this book from being saved:</p>
		<ul>
			<% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>
<div class="row">
<h3>Title</h3>
</div>
<div class="row">
	<%= f.text_field :title, class: "col-xs-12" %>
</div>
<div class="row">
<h3>opinion</h3>
</div>
<div class="row">
	<%= f.text_area :body, class: "col-xs-12" %>
</div>
<div class="row">
<br><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></br>
</div>
<% end %>



