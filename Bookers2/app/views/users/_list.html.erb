<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
  <div class="col-lg-3">
<h1>User info</h1>
 <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>


<table class="table">
	<tbody>
		<tr></tr>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</tbody>
</table>

	<% if user.id == current_user.id %>
		<button class="btn btn-default col-xs-12" >
        <%= link_to edit_user_path(user) do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
   		</button>
    <% end %>

<h2>New book</h2>
<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
		<p><%= book.errors.count %> errors prohibited this book from being saved:</p>
		<ul>
			<% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

<h3>Title</h3>
	<%= f.text_field :title, class: "col-xs-12" %>
<h3>opinion</h3>
	<%= f.text_area :body, class: "col-xs-12" %>
<br><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></br>
<% end %>
