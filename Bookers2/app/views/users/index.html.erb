
<h1>Users</h1>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, size: "40 x 40", format: 'jpeg', fallback: "no_image.jpg" %></td>
			<td><%= user.name %></td>
			<td><%= link_to "show", user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>