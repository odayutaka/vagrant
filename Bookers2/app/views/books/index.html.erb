<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %><%= link_to book_path(@book) %></td>
			<td><%= book.opinion %></td>
			<td>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

<h3>Title</h3>
	<%= f.text_field :title %>
<h3>Body</h3>
	<%= f.text_area :opinion %>
<br><%= f.submit 'Create Book' %></br>
<% end %>