<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Book Detail</h1>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', fallback: "no_image.jpg" %></td>
			<td><%= link_to book_path(@book) do %>
				<%= @book.title %>
				<% end %>
			</td>
			<td><%= @book.body %></td>

			<td>
				<% if @book.user == current_user %>
				<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
				<% end %>
			</td>
			<td>
				<% if @book.user == current_user %>
				<%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>