<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, size: "100x100", fallback: "no_image.jpg") %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
</table>

<div class="row">
	<% if user.id == current_user.id %>
		<%= link_to edit_user_path(user) do %>
		<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
		<% end %>
	<% end %>
</div>